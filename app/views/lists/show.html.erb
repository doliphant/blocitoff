



<% if @list.nil? %>
  <h1>You have nothing ToDo! Lets get started.</h1>
  <%= link_to "New ToDo List", new_list_path, class: 'btn btn-success' %>
<% else %>
  <div align="center">
    <h1>Your ToDo</h1>
    <h2><%= @list.title %> <%= link_to "Edit Title", edit_list_path(@list), class: 'btn btn-success btn-xs' %></h2>

    <br>

    <div class='new-item'>
      <%= render partial: 'items/form', locals: {list: @list} %>
    </div>

    <br>

    <% if @list.items.empty? %>
      <p> You have nothing ToDO. </p>
    <% else %>
        <table class="table table-bordered" style="width:500px">
          <thead>
            <tr>
              <td>
                <p class="text-center">
                  <strong> ToDO </strong>
                </p>
              </td>
              <td>
                <p class="text-center">
                  <strong> Tick Tock... </strong>
                </p>
              </td>
              <td>
                <p class="text-center">
                  <strong> All done? </strong>
                </p>
              </td>
          </thead>
          <tbody id="list-table">
              <%= render partial: 'items/item', collection: @items, locals: { list: @list } %>
          </tbody>
        </table>
    <% end %>

    <div>
      <%= link_to "Delete List", @list, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this list?' } %>
    </div>

  </div>
<% end %>
