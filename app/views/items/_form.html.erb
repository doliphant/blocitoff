<!-- for adding items to list in item#show -->

<%= form_for [list, list.items.new], remote: true do |f| %>
  <h4>Add a ToDo</h4>

  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter ToDo" %>
  </div>

  <div class="form-group">
    <%= f.submit "ToDo it!", class: 'btn btn-success' %>
  </div>


<% end %>
